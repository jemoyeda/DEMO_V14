<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Vista formulario/form para propiedades-->
    <record id="propiedades_form_view" model="ir.ui.view">
        <field name="name">propiedades.form.view</field>
        <field name="model">bienes.raices</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="Propiedades">
                <sheet>
                    <group>
                        <field name="titulo"/>
                        <field name="descripcion"/>
                        <field name="codigo_postal"/>
                        <field name="precio"/>        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Vista lista/tree para propiedades-->
    <record id="view_tree_propiedades_ui" model="ir.ui.view">
        <field name="name">propiedades.tree.view</field>
        <field name="model">bienes.raices</field>
        <field name="arch" type="xml">
            <tree>
                <field name="titulo"/>
                <field name="descripcion"/>
                <field name="codigo_postal"/>
                <field name="precio"/> 
            </tree>
        </field>
    </record>
</odoo>
